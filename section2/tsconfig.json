{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "dist",
    // strictNullChecks의 상위 옵션임.
    "strict": true,
    // 잠시 넣을 값이 없을 때 다른 타입이어도 null을 넣을 수 있도록 설정.
    // "strictNullChecks": false,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": ["src"]
}
